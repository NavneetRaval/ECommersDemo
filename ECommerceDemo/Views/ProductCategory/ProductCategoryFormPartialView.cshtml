@model ECommerceDemo.Models.ProductCateroryModal

@using ECommerceDemo.Utils

@{
    Layout = null;
}

@using (Html.BeginForm("SaveProduct", "ProductCategory", FormMethod.Post, new { @class = "form-horizontal", id = "ProductForm" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
  
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(x => x.ProdCatId)

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
}
